{
    "name": "github-releases-for-automated-package-publishing-action",
    "description": "GitHub Action to validate and extract GitHub release information, used for automated package publishing.",
    "version": "0.0.0",
    "author": {
        "name": "Michael Novotny",
        "email": "manovotny@gmail.com",
        "url": "https://manovotny.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/manovotny/github-releases-for-automated-package-publishing-action.git"
    },
    "keywords": [
        "action",
        "actions",
        "automated",
        "automation",
        "github",
        "github-actions",
        "npm",
        "release",
        "publish",
        "publishing",
        "semver",
        "version",
        "yarn"
    ],
    "engines": {
        "node": ">=16.18.1",
    },
    "main": "index.js",
    "scripts": {
        "build": "ncc build index.js",
        "lint": "eslint . --ext .js --ext .json",
        "prettier": "prettier --write \"**/*.{js,json,md,yml}\"",
        "prettier:check": "prettier --check \"**/*.{js,json,md,yml}\"",
        "test": "npm run lint && npm run prettier:check"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,json,md,yml}": [
            "prettier --write",
            "git add"
        ]
    },
    "dependencies": {
        "@actions/core": "1.2.6",
        "@actions/github": "4.0.0",
        "dot-prop": "6.0.1",
        "fs-extra": "9.1.0",
        "semver": "7.3.4"
    },
    "devDependencies": {
        "@vercel/ncc": "0.27.0",
        "eslint": "6.2.1",
        "eslint-config-get-off-my-lawn": "5.0.1",
        "husky": "4.3.8",
        "lint-staged": "10.5.3",
        "prettier": "2.2.1"
    }
}
